<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- First Label-Text Pair -->
        <TextView
            android:id="@+id/label1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="18sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/text1_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shantanu"
            android:textSize="18sp"
            android:layout_toEndOf="@id/label1_textview"
            android:padding="16dp"/>

        <!-- Second Label-Text Pair -->
        <TextView
            android:id="@+id/label2_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_below="@id/label1_textview"/>

        <TextView
            android:id="@+id/text2_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver"
            android:textSize="18sp"
            android:layout_toEndOf="@id/label2_textview"
            android:layout_below="@id/text1_textview"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/label3_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_below="@id/label2_textview"/>

        <TextView
            android:id="@+id/text3_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agra Sector 25"
            android:textSize="18sp"
            android:layout_toEndOf="@id/label3_textview"
            android:layout_below="@id/text2_textview"
            android:padding="16dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>